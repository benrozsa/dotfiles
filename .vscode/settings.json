{
  "files.trimTrailingWhitespace": true,
  "files.autoSave": "off",
  "window.zoomLevel": 0,
  "extensions.ignoreRecommendations": false,
  "oneDarkPro.vivid": true,
  "search.enableSearchEditorPreview": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  "editor.tabSize": 4,
  "editor.fontSize": 12,
  "editor.fontFamily": "Jetbrains Mono",
  "editor.fontWeight": "300",
  "editor.formatOnType": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.smoothScrolling": true,
  "editor.suggestSelection": "first",
  "editor.minimap.enabled": false,
  "editor.rulers": [80],
  "editor.fontLigatures": true,
  "editor.insertSpaces": true,
  "editor.lineNumbers": "on",
  "editor.renderWhitespace": "all",

  "editor.codeActionsOnSave": ["source.organizeImports", "source.fixAll"],

  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.preferredDarkColorTheme": "One Dark Pro",
  "workbench.preferredHighContrastColorTheme": "One Dark Pro",
  "workbench.preferredLightColorTheme": "One Dark Pro",
  "workbench.colorTheme": "One Dark Pro",
  "workbench.colorCustomizations": {
    "statusBar.background": "#2B7FC6",
    "statusBar.noFolderBackground": "#2B7FC6",
    "statusBar.debuggingBackground": "#2B7FC6"
  },

  "terminal.external.osxExec": "iTerm.App",
  "terminal.integrated.shell.osx": "/bin/zsh",
  "terminal.integrated.rendererType": "dom",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.fontFamily": "JetBrains Mono",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.fontWeight": "500",

  "git.confirmSync": false,
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.autoStash": true,
  "git.fetchOnPull": true,

  "eslint.run": "onSave",
  "eslint.enable": true,
  "eslint.alwaysShowStatus": true,

  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",

  "emmet.showSuggestionsAsSnippets": true,
  "emmet.triggerExpansionOnTab": true,

  "vsicons.dontShowNewVersionMessage": true,
  "vsicons.projectDetection.autoReload": true,

  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "vim.syntax": "on",
  "vim.number": true,
  "vim.wildmenu": true,
  "vim.showcmd": true,
  "vim.nocompatible": true,
  "vim.background": "dark",
  "vim.backspace": "indent,eol,start",
  "vim.textwidth": 79,
  "vim.wrapmargin": 8,
  "vim.encoding": "utf-8",
  "vim.showmatch": true,
  "vim.autoindent": true,
  "vim.tabstop": 4,
  "vim.softtabstop": 4,
  "vim.enableNeovim": true,
  "vim.neovimPath": "/usr/local/bin/nvim",
  "vim.easymotion": true,
  "vim.highlightedyank.enable": true,
  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "before": ["<Esc>"],
      "after": ["<Esc>"],
      "commands": ["workbench.action.files.save"]
    }
  ],

  "go.formatTool": "goimports",
  "go.useLanguageServer": true,

  "liveServer.settings.donotShowInfoMsg": true
}
