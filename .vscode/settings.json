{
  "files.trimTrailingWhitespace": true,
  "files.autoSave": "off",
  "window.zoomLevel": 0,
  "extensions.ignoreRecommendations": false,
  "oneDarkPro.vivid": true,
  "search.enableSearchEditorPreview": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  "editor.tabSize": 4,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.fontSize": 12,
  "editor.fontFamily": "Roboto Mono",
  "editor.fontWeight": "400",
  "editor.formatOnType": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.smoothScrolling": true,
  "editor.suggestSelection": "first",
  "editor.minimap.enabled": false,
  "editor.rulers": [80],
  "editor.fontLigatures": true,
  "editor.lineNumbers": "on",
  "editor.renderWhitespace": "all",
  "editor.codeActionsOnSave": ["source.fixAll"],
  "editor.semanticTokenColorCustomizations": {
    "enabled": true
  },

  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.colorTheme": "One Dark Pro",
  "workbench.preferredDarkColorTheme": "One Dark Pro",
  "workbench.preferredHighContrastColorTheme": "One Dark Pro",
  "workbench.preferredLightColorTheme": "One Dark Pro",
  "workbench.colorCustomizations": {
    "statusBar.background": "#1A1A1A",
    "statusBar.noFolderBackground": "#1A1A1A",
    "statusBar.debuggingBackground": "#1A1A1A"
  },

  "terminal.external.osxExec": "iTerm.App",
  "terminal.integrated.shell.osx": "/bin/zsh",
  "terminal.integrated.rendererType": "dom",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.fontFamily": "JetBrains Mono",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.fontWeight": "500",

  "git.confirmSync": false,
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.autoStash": true,
  "git.fetchOnPull": true,

  "eslint.run": "onSave",
  "eslint.enable": true,
  "eslint.alwaysShowStatus": true,
  "eslint.validate": [
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact"
  ],

  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",

  "emmet.showSuggestionsAsSnippets": true,
  "emmet.triggerExpansionOnTab": true,

  "vsicons.dontShowNewVersionMessage": true,
  "vsicons.projectDetection.autoReload": true,

  "vim.syntax": "on",
  "vim.number": true,
  "vim.wildmenu": true,
  "vim.showcmd": true,
  "vim.nocompatible": true,
  "vim.background": "dark",
  "vim.backspace": "indent,eol,start",
  "vim.textwidth": 79,
  "vim.wrapmargin": 8,
  "vim.encoding": "utf-8",
  "vim.showmatch": true,
  "vim.autoindent": true,
  "vim.tabstop": 4,
  "vim.softtabstop": 4,
  "vim.enableNeovim": true,
  "vim.neovimPath": "/usr/local/bin/nvim",
  "vim.easymotion": true,
  "vim.highlightedyank.enable": true,
  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "before": ["<Esc>"],
      "after": ["<Esc>"],
      "commands": ["workbench.action.files.save"]
    }
  ],

  "go.formatTool": "goimports",
  "go.useLanguageServer": true,

  "liveServer.settings.donotShowInfoMsg": true,
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [80],
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": false
  },
  "projectManager.git.baseFolders": ["/Users/rozsabence/Dev"]
}
